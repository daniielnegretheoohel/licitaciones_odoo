<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_inherit_metas" model="ir.ui.view">
        <field name="name">res.partner.form.metas</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- Insertar Page dentro del notebook -->
            <xpath expr="//form/sheet/notebook" position="inside">

                <page string="Metas personales">
                    <field name="meta_ids"
                           context="{'form_view_ref': 'alya.view_meta_personal_form'}">

                        <list>
                            <field name="nombre"/>
                            <field name="categoria"/>
                            <field name="estado"/>
                            <field name="fecha_limite"/>
                        </list>

                    </field>
                </page>

            </xpath>

        </field>
    </record>

</odoo>
